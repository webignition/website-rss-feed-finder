{
    "name": "webignition/website-rss-feed-finder",
    "description": "Find the RSS feed from a given website base URL",
    "keywords": ["RSS"],
    "homepage": "https://github.com/webignition/website-rss-feed-finder",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "jon@webignition.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\WebsiteRssFeedFinder\\": "src/",
            "webignition\\Tests\\WebsiteRssFeedFinder\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=5.5.0",
        "webignition/internet-media-type":">=0.1,<1.0",
        "webignition/web-page-model":">=1.0.2,<=1.0.5",
        "guzzle/guzzle":">=3.8.1",
        "webignition/url":">=1.7.2,<2.0",
        "webignition/cookie-url-matcher":">=0.1,<1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "minimum-stability":"dev",
    "prefer-stable":true
}
